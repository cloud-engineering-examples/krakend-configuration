{
    "$schema": "https://www.krakend.io/schema/krakend.json",
    "version": 3,
    "name": "KrakenD - API Gateway",
    "output_encoding": "json",
    "timeout": "3000ms",
    "cache_ttl": "300s",
    "disable_rest": true,
    "endpoints": [
      {
        "endpoint": "/recipes/{resource}",
        "method": "GET",
        "output_encoding": "json",
        "backend": [
          {
            "url_pattern": "/",
            "encoding": "json",
            "sd": "static",
            "method": "GET",
            "host": ["https://api.github.com"],
            "disable_host_sanitize": false
          }
        ]
      }
    ]
  }